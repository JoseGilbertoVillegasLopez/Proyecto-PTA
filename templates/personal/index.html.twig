{% extends 'base.html.twig' %}

{% block title %}Personal index{% endblock %}

{% block body %}
    <h1>Lista de personal</h1>
    <a href="{{ path('app_personal_new') }}">Crear nuevo</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre completo</th>
                <th>Correo</th>
                <th>Puesto</th>
                <th>Departamento</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personal in personals %}
            <tr>
                <td>{{ personal }}</td>
                <td>{{ personal.correo }}</td>
                <td>{{ personal.puesto.nombre }}</td>
                <td>{{ personal.departamento.nombre }}</td>
                <td>{{ personal.activo ? 'Si' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_personal_show', {'id': personal.id}) }}">Ver</a>
                    <a href="{{ path('app_personal_edit', {'id': personal.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
