<turbo-frame id="content">
    <section class="puesto-module">
        <section class="puesto-show-module">

            <!-- ===============================
                 HEADER (IZQ | CENTRO | DER)
            ================================ -->
            <header class="puesto-show-module__header">

                <!-- IZQUIERDA -->
                <div class="puesto-show-module__header-left">
                    <a
                        href="{{ path('app_puesto_index') }}"
                        class="puesto-show-module__action puesto-show-module__action--back"
                        title="Volver a la lista"
                    >
                        <i class="bi bi-arrow-left"></i>
                    </a>
                </div>

                <!-- CENTRO -->
                <h1 class="puesto-show-module__title">
                    Informaci√≥n del puesto
                </h1>

                <!-- DERECHA -->
                <div class="puesto-show-module__header-right">

                    <a
                        href="{{ path('app_puesto_edit', {'id': puesto.id}) }}"
                        class="puesto-show-module__action puesto-show-module__action--edit"
                        title="Editar"
                    >
                        <i class="bi bi-pencil-fill"></i>
                    </a>

                    <div
                        class="puesto-show-module__action puesto-show-module__action--delete"
                        title="Eliminar"
                    >
                        {{ include('admin/puesto/_delete_form.html.twig') }}
                    </div>

                </div>

            </header>

            <!-- ===============================
                 DETAIL
            ================================ -->
            <div class="puesto-show-module__detail-wrapper">
                <table class="puesto-show-module__detail-table">
                    <tbody>

                        <tr>
                            <th class="puesto-show-module__detail-label">Nombre</th>
                            <td class="puesto-show-module__detail-value">
                                {{ puesto.nombre }}
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </section>
    </section>
</turbo-frame>
