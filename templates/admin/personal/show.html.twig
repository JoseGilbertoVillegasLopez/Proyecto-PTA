<turbo-frame id="content">
    <section class="personal-module">
        <section class="personal-show-module">

            <!-- ===============================
                 HEADER (IZQ | CENTRO | DER)
            ================================ -->
            <header class="personal-show-module__header">

                <!-- IZQUIERDA -->
                <div class="personal-show-module__header-left">
                    <a
                        href="{{ path('app_personal_index') }}"
                        class="personal-show-module__action personal-show-module__action--back"
                        title="Volver a la lista"
                    >
                        <i class="bi bi-arrow-left"></i>
                    </a>
                </div>

                <!-- CENTRO -->
                <h1 class="personal-show-module__title">
                    Información del personal
                </h1>

                <!-- DERECHA -->
                <div class="personal-show-module__header-right">

                    <a
                        href="{{ path('app_personal_edit', {'id': personal.id}) }}"
                        class="personal-show-module__action personal-show-module__action--edit"
                        title="Editar"
                    >
                        <i class="bi bi-pencil-fill"></i>
                    </a>

                    <div
                        class="personal-show-module__action personal-show-module__action--delete"
                        title="Eliminar"
                    >
                        {{ include('admin/personal/_delete_form.html.twig') }}
                    </div>

                </div>

            </header>

            <!-- ===============================
                 DETAIL
            ================================ -->
            <div class="personal-show-module__detail-wrapper">
                <table class="personal-show-module__detail-table">
                    <tbody>

                        <tr>
                            <th class="personal-show-module__detail-label">Nombre</th>
                            <td class="personal-show-module__detail-value">{{ personal.nombre }}</td>
                        </tr>

                        <tr>
                            <th class="personal-show-module__detail-label">Apellido paterno</th>
                            <td class="personal-show-module__detail-value">{{ personal.apPaterno }}</td>
                        </tr>

                        <tr>
                            <th class="personal-show-module__detail-label">Apellido materno</th>
                            <td class="personal-show-module__detail-value">{{ personal.apMaterno }}</td>
                        </tr>

                        <tr>
                            <th class="personal-show-module__detail-label">Puesto</th>
                            <td class="personal-show-module__detail-value">{{ personal.puesto.nombre }}</td>
                        </tr>

                        <tr>
                            <th class="personal-show-module__detail-label">Departamento</th>
                            <td class="personal-show-module__detail-value">{{ personal.departamento.nombre }}</td>
                        </tr>

                        <tr>
                            <th class="personal-show-module__detail-label">Correo</th>
                            <td class="personal-show-module__detail-value">{{ personal.correo }}</td>
                        </tr>

                        <tr>
                            <th class="personal-show-module__detail-label">Activo</th>
                            <td class="personal-show-module__detail-value">
                                {{ personal.activo ? 'Sí' : 'No' }}
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </section>
    </section>
</turbo-frame>
