<turbo-frame id="content">

    <section class="departamento-module">
        <section class="departamento-edit-module">

            {# ===============================
               FORM
               =============================== #}
            {{ form_start(form, {
                action: path('app_departamento_edit', { id: departamento.id }),
                attr: {
                    'data-turbo-frame': 'content',
                    'class': 'departamento-edit-module__form'
                }
            }) }}

            {# ===============================
               HEADER (IZQ | CENTRO | DER)
               =============================== #}
            <header class="departamento-edit-module__header">

                <!-- IZQUIERDA ‚Äî VOLVER -->
                <div class="departamento-edit-module__header-left">
                    <a
                        href="{{ path('app_departamento_index') }}"
                        data-turbo-frame="content"
                        class="departamento-edit-module__action departamento-edit-module__action--back"
                        title="Volver"
                    >
                        <i class="bi bi-arrow-left"></i>
                    </a>
                </div>

                <!-- CENTRO ‚Äî T√çTULO -->
                <h1 class="departamento-edit-module__title">
                    Editar departamento
                </h1>

                <!-- DERECHA ‚Äî GUARDAR -->
                <div class="departamento-edit-module__header-right">
                    <button
                        type="submit"
                        class="departamento-edit-module__action departamento-edit-module__action--save"
                        title="Guardar cambios"
                    >
                        <i class="bi bi-save-fill"></i>
                    </button>
                </div>

            </header>

            {# ===============================
               CAMPOS
               =============================== #}
            <div class="departamento-edit-module__form-grid">

                <div class="departamento-edit-module__field">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>

            </div>

            {# üîê CSRF + hidden fields #}
            {{ form_rest(form) }}

            {{ form_end(form) }}

            {# ===============================
               DELETE (ICON ONLY)
               =============================== #}
            <div class="departamento-edit-module__delete">
                {{ include('admin/departamento/_delete_form.html.twig') }}
            </div>

        </section>
    </section>

</turbo-frame>
