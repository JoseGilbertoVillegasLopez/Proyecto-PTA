{# templates/emails/bienvenida.html.twig #}
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <title>{{ appName }} - Bienvenida</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body style="margin:0;padding:0;background:#f6f7fb;font-family:Arial, Helvetica, sans-serif;color:#111;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="background:#f6f7fb;padding:24px 0;">
      <tr>
        <td align="center">
          <table role="presentation" width="600" cellspacing="0" cellpadding="0" style="background:#ffffff;border-radius:8px;overflow:hidden;">
            <tr>
              <td style="background:#111827;color:#fff;padding:16px 24px;font-size:18px;font-weight:bold;">
                {{ appName }} — Notificación
              </td>
            </tr>

            <tr>
              <td style="padding:24px;">
                <p style="margin:0 0 12px 0;font-size:14px;color:#6b7280;">
                  {{ fecha|date('d/m/Y H:i') }}
                </p>
                <h2 style="margin:0 0 12px 0;">Hola, {{ nombreCompleto|default('Usuario') }}</h2>

                <p style="margin:0 0 16px 0;line-height:1.5;">
                  Bienvenido/a a <strong>{{ appName }}</strong>. A continuación encontrarás tu información de acceso.
                </p>

                <table role="presentation" cellspacing="0" cellpadding="0" style="width:100%;background:#f9fafb;border:1px solid #e5e7eb;border-radius:6px;margin:8px 0 16px 0;">
                  <tr>
                    <td style="padding:12px 16px;width:35%;color:#6b7280;">Puesto</td>
                    <td style="padding:12px 16px;">{{ puesto|default('N/D') }}</td>
                  </tr>
                  <tr>
                    <td style="padding:12px 16px;color:#6b7280;">Departamento</td>
                    <td style="padding:12px 16px;">{{ departamento|default('N/D') }}</td>
                  </tr>
                  <tr>
                    <td style="padding:12px 16px;color:#6b7280;">Usuario</td>
                    <td style="padding:12px 16px;"><strong>{{ usuario }}</strong></td>
                  </tr>
                  {% if passwordTemporal is defined and passwordTemporal %}
                  <tr>
                    <td style="padding:12px 16px;color:#6b7280;">Contraseña temporal</td>
                    <td style="padding:12px 16px;"><strong>{{ passwordTemporal }}</strong></td>
                  </tr>
                  {% endif %}
                </table>

                <p style="margin:0 0 16px 0;">
                  Ingresa al sistema desde:
                  <a href="{{ loginUrl }}" style="color:#2563eb;">{{ loginUrl }}</a>
                </p>

                {% if passwordTemporal is defined and passwordTemporal %}
                  <p style="margin:0 0 16px 0;color:#b45309;background:#fff7ed;border:1px solid #fde68a;padding:12px;border-radius:6px;">
                    <strong>Importante:</strong> por seguridad, cambia tu contraseña al iniciar sesión.
                  </p>
                {% endif %}

                <p style="margin:0 0 8px 0;color:#6b7280;">
                  Si no reconoces este correo, por favor contacta a <a href="mailto:{{ soporteEmail }}" style="color:#2563eb;">{{ soporteEmail }}</a>.
                </p>
              </td>
            </tr>

            <tr>
              <td style="background:#f3f4f6;color:#6b7280;padding:12px 24px;font-size:12px;">
                {{ appName }} — Área de Sistemas
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
